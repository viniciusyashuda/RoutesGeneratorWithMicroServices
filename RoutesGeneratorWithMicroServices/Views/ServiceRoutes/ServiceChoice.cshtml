@{
	ViewData["Title"] = "ServiceChoice";
}

<h1>Escolha do Serviço</h1>

<table class="table">
	<form asp-action="CityChoice">
		<div class="form-group">

			@foreach (var header in ViewBag.SelectedHeaders)
			{
				<input type="hidden" value="@header" for="@header" id="headers" name="headers" />
			}
		</div>
		<div class="form-group">

			@foreach (var service in ViewBag.Services)
			{
				if (service != "")
				{
					<input type="radio" value="@service" for="@service" id="service" name="service" checked />
					<label value="@service" for="@service">@service</label>
					<br />
				}
			}
			<div class="form-group">
				<input type="submit" value="Continuar" class="btn btn-primary" />
			</div>
		</div>
	</form>
</table>
