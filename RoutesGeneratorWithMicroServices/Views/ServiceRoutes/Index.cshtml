@{
	ViewData["Title"] = "Index";
}
	<h1>Índice</h1>
@if (!ViewBag.Authenticate)
{
	<div class="row">
		<div class="col-md-12">
			<span>Usuário não está logado no sistema!</span>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<form method="post" asp-controller="Users" asp-action="Index">
				<input type="submit" value="Entrar" class="btn btn-primary">
			</form>
		</div>
	</div>
}
else
{
	<h2> Escolha as colunas que serão utilizadas na escrita do relatório</h2>
	<table class="table">
		<form asp-action="ServiceChoice">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label class="control-label"></label><br />
				@{
					foreach (var column in ViewBag.Headers)
					{
						<input type="checkbox" id="Column" name="Column" value=@column>
						<label for="@column">@column</label>
						<br />
					}
				}
			</div>
			<div class="form-group">
				<a asp-action="ServiceChoice"></a>
				<input type="submit" value="Continuar" onclick="ServiceChoice()" class="btn btn-primary" />
			</div>
		</form>
	</table>
}